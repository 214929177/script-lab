{
  "name": "script-lab-react",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "installAll": "yarn install && cd packages/editor && yarn install && cd ../server && yarn install",
    "copy-monaco": "cd packages/editor && yarn copy-monaco",
    "build": "cd packages/editor && yarn build && cd ../server && yarn build",
    "deploy": "node scripts/deploy.js",
    "editor": "cd packages/editor && yarn start",
    "server": "cd packages/server && yarn start",
    "start": "concurrently --kill-others-on-fail \"yarn server\" \"yarn editor\""
  },
  "devDependencies": {
    "concurrently": "^3.5.0",
    "lerna": "^3.4.0",
    "shelljs": "^0.8.2"
  }
}
