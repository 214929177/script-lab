{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "typeRoots": ["./interfaces", "node_modules/@types", "../../node_modules/@types"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": false,
    "outDir": "lib",
    "declaration": true,

    // "resolveJsonModule": true,
    "isolatedModules": true,
    // "noEmit": true,
    "jsx": "react",
    "alwaysStrict": false,
    "strictFunctionTypes": false,
    "strictPropertyInitialization": false
  },
  "include": ["./components/**/*"],
  "exclude": [
    "node_modules",
    "**/node_modules/**/*",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "public",
    "**/*.stories.tsx"
  ]
}
