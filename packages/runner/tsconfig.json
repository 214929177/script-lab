{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "typeRoots": [
      "../common/src/interfaces",
      "node_modules/@types",
      "../../node_modules/@types"
    ],
    "outDir": "build/dist",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "module": "esnext"
  },
  "include": ["./src/**/*", "../common/src/interfaces"],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "public",
    "**/*.stories.tsx"
  ]
}
