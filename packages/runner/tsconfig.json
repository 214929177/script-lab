{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "build/dist",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve"
  },
  "include": ["../interfaces/*", "./src/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "public",
    "**/*.stories.tsx"
  ]
}
